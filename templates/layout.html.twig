<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>
        {% block title %}Sortie.com{% endblock %}
    </title>

    <link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css" class="">
    <script src="https://kit.fontawesome.com/10bcb49af4.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
<header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Sortir.com</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Accueil
                        <span class="sr-only">(current)</span>
                    </a>
                </li>

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('logout') }}">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('sortie_ajouter') }}">Ajouter une sortie</a>
                    </li>
                {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li>
                {% endif %}

            </ul>
        </div>
    </nav>

</header>


    <main>
        <div class="container mt-5">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% if (label is same as('success')) %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>{{ message }}
                            {{ app.user.nom }} {{ app.user.prenom }} !
                            </strong>
                        </div>
                    {% elseif (label is same as('error')) %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
        {% block main %}
        {% endblock %}
    </main>

    <footer class="text-center fixed-bottom">
        Â©ENI Ecole Informatique {{ "now"|date("Y") }}
    </footer>
</body>
</html>
