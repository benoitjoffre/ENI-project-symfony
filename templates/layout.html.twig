<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" id="bootstrap-css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!--Custom styles-->
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">


    <title>
        {% block title %}Sortie.com{% endblock %}
    </title>
</head>
<body>
<header>
<div class="container">

        <!-- /.navbar -->
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark ">
            <a class="navbar-brand" href="#">Sortie.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('accueil') }}">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('login') }}">Login</a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item active">
                        <a class="nav-link " href="{{ path('logout') }}">Logout</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Sortie</a>
                    </li>
                    {% endif %}
                </ul>

            </div>
        </nav>
</div>
</header>


    <main>
        <div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% if (label is same as('success')) %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>{{ message }}
                            {{ app.user.nom }} {{ app.user.prenom }} !
                            </strong>
                        </div>
                    {% elseif (label is same as('error')) %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>
        {% block main %}
        {% endblock %}
    </main>

    <footer>
        Â©ENI Ecole Informatique {{ "now"|date("Y") }}
    </footer>
</body>
</html>
